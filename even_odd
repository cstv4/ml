def print_even_odd(numbers):
    even_list = []
    odd_list = []

    for number in numbers:
        if number % 2 == 0:
            even_list.append(number)
        else:
            odd_list.append(number)

    print("Even numbers:", even_list)
    print("Odd numbers:", odd_list)


# Read a list of numbers from the user
num_input = input("Enter a list of numbers, separated by spaces: ")
numbers = list(map(int, num_input.split()))

# Call the function to print even and odd numbers
print_even_odd(numbers)
